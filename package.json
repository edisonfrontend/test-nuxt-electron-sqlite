{
  "name": "nuxt-app",
  "version": "1.0.0",
  "description": "Nuxt application packaged as Electron app",
  "author": "Edison",
  "main": "electron/main.cjs",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "electron:dev": "electron .",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "nuxt": "^4.2.2",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@nuxt/devtools": "^3.1.1",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "autoprefixer": "^10.4.23",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19"
  },
  "build": {
    "asar": false,
    "files": [
      ".output/**",
      "electron/**",
      "package.json"
    ]
  }
}